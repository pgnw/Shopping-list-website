@{
    Layout = null;

}
@model Account
<!DOCTYPE html>

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <meta name="viewport" content="width=device-width" />
    <title>ShoppingList</title>

</head>
<body class="bg-colour-0">

    <div class="container" style="margin-top:100px">
        <div class="row border border-3">
            <div class="col-sm border-black border-3 ">
                <div>Shopping lists</div>
            </div>
            <div class="col-sm">Date Created: DATEGOHERE</div>
            <div class="col-sm">Total cost:  COSTGOHERE</div>
            <div class="col-sm">
                <input type="button" id="btnLogin" value="Login" />
                <input type="button" id="btnSignup" value="Sign up" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 border border-4" style="min-height:300px">
                <div style="margin-top:20px">
                    @{
                        // The model is a user account
                        if (Model != null && Model.ShoppingCarts != null)
                        {
                           var carts = Model.ShoppingCarts.ToList();
                            // Creates a row for each cart to sit in.
                            foreach (var cart in carts)
                            {
                                <div class="row" style="height:30px">
                                    <div class="col-sm">
                                        <!--this the select button for each list.-->
                                        <input type="button" value="@cart.Name" id="cartSelect" cartId = @cart.Id />
                                    </div>
                                    <div class="col-sm">
                                        <input type="image" src="~/xBtn2.png" style="height:30px" id="cartDelete" cartId =@cart.Id  />
                                    </div>
                                </div>
                            }
                        }
                    }

                </div>

                <!--This allows users to create more lists.-->
                <div style="margin-top:20px" >
                    <label>Create a new shopping list</label>
                    <input type="text" value="Name" id="newListName" />
                    <input type="button" value="Create" id="btnListCreate" />
                </div>


            </div>
            <div class="col-md-8">
                <div class="col-4" style="margin-bottom: 20px" id="cardHolder">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md" style="margin-left:-12px">
                <input type="button" value="Save selected list" />
            </div>
        </div>
        <div class="row">
            <div class="col-md" style="margin-left:-12px">
                <input type="button" value="Delete selected list" />
            </div>
        </div>

        <div class="row">
            <div class="col-md" style="margin-left:-26px">
                <a class="nav-link text-dark d-inline" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md" style="margin-left:-26px">
                <a class="nav-link text-dark d-inline" asp-area="" asp-controller="Settings" asp-action="Index">Settings</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md" style="margin-left:-26px">
                <a class="nav-link text-dark d-inline" asp-area="" asp-controller="About" asp-action="Index">About us</a>
            </div>
        </div>

    </div>


    <!-- Modal -->
    <div class="modal fade" id="m" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content" id="mContent"></div>
        </div>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/js/ShoppingCart.js" asp-append-version="true"></script>
    <script src="~/js/User.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>



</body>
</html>
